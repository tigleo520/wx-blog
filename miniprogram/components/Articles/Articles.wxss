/* components/Articles/Articles.wxss */
@import "../../styles/iconfont.wxss";

.articles-list {
  margin: 30rpx auto;
  width: 96vw;
}
.article-wrap {
  margin-bottom: 30rpx;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border: 1px solid #f1f1f1;
  box-shadow: 5rpx 5rpx 5rpx #eee;
}
.article-wrap .title {
  font-size: 40rpx;
  font-weight: 600;
}
.article-wrap .content {
  margin: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.article-wrap .tips {
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}
.article-wrap .tips .iconfont {
  position: relative;
  top: 2rpx;
  margin-left: 15rpx;
  font-size: 32rpx;
}
.article-wrap .tips .icon-view {
  font-size: 48rpx;
  top: 8rpx;
}